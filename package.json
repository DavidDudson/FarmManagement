{
  "name": "farmFINANZ",
  "version": "0.1.1",
  "description": "Farm Knowledge assessor for the Farm Management Institute, Massey University",
  "main": "./src/start.js",
  "scripts": {
    "test": "karma start",
    "clean": "rm -r dist/*",
    "mkdir": "mkdir -p dist/public",
    "copy:index": "cp src/client/index.html dist/public/index.html",
    "copy:iframe": "cp src/client/iframe.css dist/public/iframe.css",
    "copy": "npm run copy:index && npm run copy:iframe",
    "quicktest": "open ./dist/public/test.html",
    "prestart": "mongod --dbpath /data --fork --logpath /dev/null",
    "start": "node ./src/start.js",
    "poststop": "mongo admin --eval 'db.shutdownServer()' > /dev/null",
    "webpack": "webpack --config=\"src/webpack.conf.js\" --progress",
    "deploy": "git push heroku master",
    "babel-node": "babel-node --stage 0 --ignore='node_modules|dist'",
    "develop": "nodemon --watch src src/start.js -r npm run babel-node -- ./src/server/",
    "webpackDevServer": "webpack-dev-server --config src/webpack.conf.js --content-base dist/public --hot --inline",
    "develop2": "(npm run clean || ! npm run clean) && npm run mkdir && npm run copy && npm run webpackDevServer & open http://localhost:8080"
  },
  "repository": "https://github.com/DavidDudson/FarmManagement.git",
  "author": "David J. Dudson, Anthony Crowcroft",
  "license": "MIT",
  "dependencies": {
    "angular": "latest",
    "angular-animate": "latest",
    "angular-aria": "latest",
    "angular-carousel": "latest",
    "angular-data-table": "latest",
    "angular-material": "latest",
    "angular-material-data-table": "latest",
    "angular-touch": "latest",
    "angular-ui-router": "latest",
    "babel-loader": "latest",
    "bluebird": "latest",
    "compass-mixins": "latest",
    "css-loader": "latest",
    "express": "latest",
    "file-loader": "latest",
    "glob": "latest",
    "html-loader": "latest",
    "json-loader": "latest",
    "lodash": "latest",
    "material-design-icons-iconfont": "latest",
    "mathjs": "latest",
    "mongoose": "latest",
    "node-sass": "latest",
    "normalize.css": "latest",
    "resolve-url-loader": "latest",
    "rimraf": "latest",
    "sass-loader": "latest",
    "style-loader": "latest",
    "ui-router": "latest",
    "url-loader": "latest",
    "v-accordion": "^1.4.1",
    "walk": "latest",
    "webpack": "latest",
    "webpack-notifier": "latest"
  },
  "engines": {
    "node": "5.1"
  },
  "babel": {
    "ignore": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "comments": false,
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "babel-core": "latest",
    "babel-loader": "latest",
    "babel-preset-es2015": "latest",
    "babel-register": "latest",
    "expect.js": "latest",
    "jasmine-core": "latest",
    "karma": "latest",
    "karma-chrome-launcher": "latest",
    "karma-firefox-launcher": "latest",
    "karma-jasmine": "latest",
    "karma-mocha": "latest",
    "karma-safari-launcher": "latest",
    "karma-sourcemap-loader": "latest",
    "karma-webpack": "latest",
    "mocha": "latest",
    "mocha-loader": "latest",
    "phantomjs": "latest"
  }
}
